{
  // General
  "editor.formatOnSave": true,

  // Git
  "git.autofetch": "all",
  "git.autofetchPeriod": 180,
  "git.pruneOnFetch": true,

  // Json
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // CSS
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Python
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin" // Set your Python virtual environment's interpreter path!
}
